
<div class="col-xs-4 white">
    <ul class="dealeruser">
        <li> <span class="glyphicon glyphicon-th"></span> <%= dcurrent_user.dealercompany.name %></li>
        <li> <span class="glyphicon glyphicon-user"></span> <%= dcurrent_user.name %></li>
    </ul>
</div>

<div class="col-xs-8 white">
    <div class="logiccs_table">    
      <table class="table table-striped table-bordered table-hover">
     <tr>
         <th>-</th>
         <th>Client Company</th>
         <th>branch</th>
         <th>VehicleNo</th>
         <th>No Plate</th>
         <th>&nbsp;</th>
         
     </tr>
    <% @logithreads.each do |thread| %>
      <% btncolor = thread.has_confirmed? ? "btn-success": "btn-danger" %>
      <tr>
        <td><%= link_to thread.id, logiposts_path(thread), class: "btn btn-xs #{btncolor}" %></td>
        <td><%= thread.truck.company.name_e %></td>
        <td><%= thread.truck.branch.name %></td>
        <td><%= thread.truck.vehicleid %></td>
        <td><%= thread.truck.number %></td>
        <td><%= link_to logithread_path(thread), class:'btn btn-xs btn-danger', method:"delete", confirm:"Are you sure" do %>
        
        <span class='glyphicon glyphicon-trash'></span>
        <% end %>
                
        </td>
      </tr>
    <% end %>
    
    </table>
    </div>
</div>