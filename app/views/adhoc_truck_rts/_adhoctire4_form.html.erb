     </div>
   </div>
   <div class="col-xs-3">
      <div class="col-xs-12">
       Tire B
      </div>
      <div class="col-xs-12">
       <%= f.number_field :tire2sn, class:"form-control" %>
      </div>
      <div class="col-xs-12">
       <%= f.number_field :tire2depth, class:"form-control" %>
      </div>
      <div class="col-xs-12">
      <%= f.date_field :tire2purchase, class:"form-control" %>
      </div>
    </div>
   <div class="col-xs-3">
     <div class="col-xs-12">
      Tire C
     </div>
     <div class="col-xs-12">
      <%= f.number_field :tire3sn, class:"form-control" %>
     </div>
     <div class="col-xs-12">
      <%= f.number_field :tire3depth, class:"form-control" %>
     </div>
     <div class="col-xs-12">
     <%= f.date_field :tire3purchase, class:"form-control" %>
     </div>
   </div>
   <div class="col-xs-3">
     <div class="col-xs-12">
      Tire D
     </div>
     <div class="col-xs-12">
      <%= f.number_field :tire4sn, class:"form-control" %>
     </div>
     <div class="col-xs-12">
      <%= f.number_field :tire4depth, class:"form-control" %>
     </div>
     <div class="col-xs-12">
     <%= f.date_field :tire4purchase, class:"form-control" %>
     </div>
   </div>

     <!--row 2-->
   <div class="col-xs-3">
     <div class="col-xs-12">
      Spare Tire
     </div>
     <div class="col-xs-12">
      <%= f.number_field :tire5sn, class:"form-control" %>
     </div>
     <div class="col-xs-12">
      <%= f.number_field :tire5depth, class:"form-control" %>
