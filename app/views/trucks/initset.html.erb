<h2> Reset Initial Truck Record History to Initial Mileage</h2>

<div class="panel">
<%= form_for(@truck.truckhistories.build, 
    url:{action: :recordinit}, html:{class:"form-horizontal"}) do |f| %>
    <%= f.hidden_field :action, value: DateTime.now %>
    
    <div class="form-group">
    <%= f.label :mileage, "Initial Mileage", class:"control-label col-sm-2" %>
    <div class="col-sm-10">
        <%= f.text_field :mileage, class:"form-control" %>
    </div>
    </div>
    <%= f.hidden_field :truck_id, value: @truck.id %>
    <%= f.submit "Set Initial Mileage", class:"btn btn-primary" %>
<% end %>
</div>