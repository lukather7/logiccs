<% cycle = 40000 %>
<%= render "modal" %>
<div class="logiccs_table">
  <div class="table-responsive">
    <%= link_to "Truck List", list_user_path(@user), class:"btn btn-danger" %>
    <%= link_to "Trailer List",  trailerlist_user_path(@user), class:"btn btn-info" %>

    <h2>Trailer List</h2>
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Vehicle ID</th>
          <th>Vehicle No.</th>
          <th>Wheels</th>
          <th>Last TireRotation</th>
          <th>Booking</th>
        </tr>
      </thead>
      <tbody>
        <% @mytrailers.each do |trailer | %>
        <tr>
          <td><%= trailer.vehicleid %></td>
          <td><%= trailer.number %></td>
          <td><%= trailer.wheels %>W</td>

          <td>

          </td>
          <td>

            <%#= link_to "Booking", booking_path(trailer.id), class:"btn btn-danger" %>
            <%= link_to "Karte", karte_trailer_path(trailer.id), class: 'btn btn-success' %>

          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%# paginate @mytrucks %>
    </div>
  </div>
  <!-- table-responsive -->
</div>