<h2>登録ディーラー一覧</h2>
<div class="row">
 <div class=" col-xs-offset-2 col-xs-8">
  <% if @dealercompanies.any? %>
    <table class="table table-striped table-bordered table-hover">
      <thead>
          <tr>
           <th class="logiccs_table">ID</th><th class="logiccs_table">会社名</th>
           <th class="logiccs_table" colspan="2">オペレーション</th>
          </tr>
      </thead> 
     <% @dealercompanies.each do |c| %>
        <tbody>
           <tr><td><%= c.id %></td>
               <td><%= c.name %></td>
               <td><%= link_to "Edit", edit_dealercompany_path(c), class:"btn btn-xs btn-primary" %></td>
               <td><%= link_to "Delete", c,  class:"btn btn-xs btn-danger", method: :delete, data: { confirm: "You sure?" } %></td>
        </tbody>  
      
     <% end %> 
     </table>
   <% end %>
 <div class="col-xs-12">
  <%= link_to "New Dealer", new_dealercompany_path, class: 'btn btn-default' %>
 </div>
 </div>

</div> 

<%#= paginate @companies %>

