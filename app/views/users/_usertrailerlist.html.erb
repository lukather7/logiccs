 <% unless trailers.present? %>
     No Trailers are listed
 <% else %>
    <div class="table-responsive table-striped">
    	<table class="table">
      <thead>
			    <tr>
			     <th class="col-xs-2 col-sm-3 col-md-3 col-lg-4">List</th>
			     <th class="col-xs-2 col-sm-3 col-md-3 col-lg-4">ID</th>
			     <th class="col-xs-2 col-sm-3 col-md-3 col-lg-4">Number</th>
				    </tr>
			   </thead>
			   <tbody>
      <% trailers.each do |trailer| %>
       <tr>
        <td class="col-xs-2 col-sm-3 col-md-3 col-lg-4"><%= render 'adddeltrailerbutton', trailer: trailer %></td>
        <td class="col-xs-2 col-sm-3 col-md-3 col-lg-4"><%= trailer.vehicleid %></td>
        <td class="col-xs-2 col-sm-3 col-md-3 col-lg-4"><%= trailer.number %></td>
       </tr>
     <% end %>
     </tbody>
   </table>  
  <% end %>