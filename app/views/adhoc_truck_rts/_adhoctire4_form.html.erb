<%= form_for(@adhoc_tire) do |f| %>

 <%= f.label :mileage %>
 <%= f.text_field :mileage %>

 <%= f.label :date %>
 <%= f.date_field :date %>

 <div class="row">
  <div class="col-xs-1">
   <div class="col-xs-12">&nbsp;<br></div>
   <div class="col-xs-12">SN<br><br><br></div>
   <div class="col-xs-12">depth<br><br><br></div>
   <div class="col-xs-12">purchase<br><br><br></div>
   
   <div class="col-xs-12">&nbsp;</div>
   <div class="col-xs-12">SN<br><br><br></div>
   <div class="col-xs-12">depth<br><br><br></div>
   <div class="col-xs-12">purchase<br><br></div>
  </div>
  <div class="col-xs-9">
    <!--row 1-->
   <div class="col-xs-3">
     <div class="col-xs-12">
      Tire A
     </div>
     <div class="col-xs-12">
      <%= f.number_field :tire1sn, class:"form-control" %>
     </div>
     <div class="col-xs-12">
      <%= f.number_field :tire1depth, class:"form-control" %>
